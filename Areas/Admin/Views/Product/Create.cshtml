@* @model Entities.Dtos.ProductDtoForInsertion olarak da tanımlanabilir ama eğer Shared/_ViewImports klasörüne 
import yaparsak buna gerek kalmaz *@
@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-3">Create</div>
</div>

<form method="post" asp-action="Create"> <!--bu noktada veri işleyeceğimiz için bir from ekledik -->
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
            @* asp-items="@ViewBag.Categories" u yeni tanım ile ekledik*@
            @* <option value="1">Book</option>
            <option value="2">Electronic</option> *@
           @* @foreach(Category cat in ViewBag.Categories) //ViewBag.Categories IEnumerable (her defasında bir örnek alınabilir) bir ifade
            {
                <option value="@cat.CategoryId">@cat.CategoryName</option>
            } bu alan eski productController üzerindeki tanım içindi*@

        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control">
        @* placeholder="product Name" da eklenebilir *@
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control">
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Save</button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Products</a>
        </div>
    </div>
</form>