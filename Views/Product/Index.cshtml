@* @{
Layout = "_Layout";
}
html kısımlarını kaldırdık (layout entegresi için) *@

@* @model List<StoreApp.Models.Product> // sadece product yazarsak tanımıyor, böyle yazmaya artık gerek yok *@
@model IQueryable<Product>

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoriesMenu")
    </div>
    <div class="col-md-9">
        <div class="row my-3">
            @* my-3 : margin y = 3 birim *@
            @* @foreach (StoreApp.Models.Product prd in Model) *@
            @foreach (Product prd in Model)
            {

                <partial name="_ProductCard" model="@prd" />

            }
        </div>
    </div>
</div>


@section Footer
    {
    <div>Only for Index footer</div>
    @* layoutda tanımlanan footer isimli ve duruma göre tanımlanabilen kısmı kullanılması *@
}

